<%=flash.notice%>

<div class="row">
    <div class="col-5 mx-auto text-center">
        
        <h1>Listing Articles</h1>
    </div>
</div>

<%= link_to 'New article', new_article_path , class: 'btn btn-secondary mb-1' %>
<table class="table text-center" >
    <tr class="thead-dark">
        <th>Title</th>
        <th>Text</th>
        <th>Creator</th>
        <th colspan="3" class="text-center">Actions</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.user.username %></td>
        <td><%= link_to 'Show', article_path(article) , class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning'  %></td>
        <td><%= link_to 'Destory' ,article_path(article) , method: :delete, data: {confirm: 'Are you sure?'} , class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
</table>