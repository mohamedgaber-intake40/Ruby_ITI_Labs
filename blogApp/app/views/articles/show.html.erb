

<div class="row mt-5">
    <div class="col-6 mx-auto">

        <div class="card">
            <div class="card-header bg-dark text-white">
                <%= @article.title %>
            </div>
            <div class="card-body">
              <h5 class="card-title">created by:  <%= @article.user.username %></h5>
              <p class="card-text"> <%= @article.text %></p>
              <ul>
                  <!-- <h2>Comments</h2> -->
                <%= render @article.comments%>
              </ul>
              <%= link_to 'Back', articles_path , class: 'btn btn-info mx-auto d-inline'%>
              <%= link_to 'Edit', edit_article_path(@article) , class: 'btn btn-warning mx-auto d-inline float-right' %> 
            </div>
          </div>
       
        <h2 class="text-center">Add comment</h2>
        <%= render 'comments/form'%>
     
    </div>
</div>